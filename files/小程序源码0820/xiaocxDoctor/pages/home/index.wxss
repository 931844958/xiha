.header-wrapper{
    position: relative;
}
.search-wrapper{
    position: absolute;
    width: 100%;
    top: 0;
    z-index: 11;
    box-sizing: border-box;
    padding: 30rpx 24rpx 0 24rpx;
}
.search-box{
    height: 82rpx;
    background-color: #ffffff;
    border:1rpx solid #dddddd;
    border-radius: 41rpx;
    display: flex;
    align-items: center;
    padding:0 32rpx;
}
.search-box .search{
    width: 570rpx;
}
.s-icon-wrapper{
    flex: 1;
    padding: 10rpx;
}
.search-box .s-icon{
    width: 44rpx;
    height: 44rpx;
}
.h-class{
    font-size: 28rpx;
    color: #333333;
}


.banner-swiper{
    width: 750rpx;
    height: 376rpx;
}
.banner-swiper image{
    width: 100%;
    height: 100%;
}

.catogory{
    display: flex;
    justify-content: space-between;
    background-color: #f5f5f7;
    padding: 36rpx 10rpx;
    font-size: 28rpx;
    color: #333333;
    font-family: PingFang-SC-Medium;
}
.ca-item{
    position: relative;
    text-align: center;
}
.t-icon{
    position: absolute;
    top:-6rpx;
    right: -12rpx;
}

.board-wrapper{
    display: flex;
    font-family: PingFang-SC-Medium;
    background-color: #ffffff;
    border-radius: 10px;
    padding: 20rpx 0;
    padding-right: 54rpx;
}
.board-wrapper .title{
    padding: 20rpx;
    font-size: 16px;
    color: #333333;
}
.board-wrapper .title text{
    font-size: 28rpx;
    color: #e81f0b;
}
.board-swiper{
    flex:1;
    margin-top: 12rpx;
    height: 120rpx;
}
.board-swiper swiper-item{
    height: 60rpx !important;
    font-size: 28rpx;
    color: #999999;
    line-height: 2;

    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}
.b-tips{
    font-size: 20rpx;
    color: #e81f0b;
    border:1px solid #e81f0b;
    border-radius: 8rpx;
    padding: 2rpx 12rpx;
    margin-right: 12rpx;
}

.pro-wrapper{
    background-color: #f5f5f7;
    padding: 30rpx;
}
.bt-wrapper{
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 20rpx 0;
    font-size: 40rpx;
    color: #666666;
    font-family: PingFang-SC-Medium;
}
.b-title{
    width: 70rpx;
    height: 2rpx;
    background-color: #333333;
}
