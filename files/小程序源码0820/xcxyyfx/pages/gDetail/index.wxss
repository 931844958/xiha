.goodsDetail{
  padding-bottom: 77rpx;
}
.buy_ask{
  position: fixed;
  top:50%;
  transform: translateY(-50%);
  right:0;
  width: 88rpx;
  height: 96rpx;
  display: flex;
  flex-wrap:wrap; 
  opacity: .8;
  font-family: PingFang-SC-Medium;
  background: #f93625;
  padding-top:20rpx;
  border-top-left-radius: 16rpx;
  border-bottom-left-radius: 16rpx;
}
.buy_ask .text{
  background: #f93625;
  color: #ffffff;
  padding:0;
  line-height: 0;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}
.buy_ask .words{
  width: 100%;
  font-size: 20rpx;
  padding-top:10rpx;
  padding-bottom: 20rpx; 
}
.goodsDetail .shoutu_wrapper{
  width: 750rpx;
  height: 550rpx;
}
.shoutu_wrapper .swiper,.shoutu_wrapper .swiper .slide-image{
  width: 100%;
  height:100%;
}
.goodsDetail .name_price{
  padding:30rpx 20rpx;
}
.goodsDetail .name_price .name{
  font-size: 28rpx;
  color: #333333;
}
.goodsDetail .name_price .price{
  padding:20rpx 0;
  font-size: 32rpx;
  color: #ff3826;
}
.goodsDetail .deliver_wrapepr{
  display: flex;
  justify-content: space-between;
}
.goodsDetail .deliver_wrapepr text{
  font-size: 22rpx;
  color: #999999;
  text-align: center;
}
.goodsDetail .deliver_wrapepr text:first-of-type{
  text-align: left;
}
.goodsDetail .deliver_wrapepr text:last-of-type{
  text-align: right;
}
.goodsDetail .youhui{
  padding:30rpx 20rpx;
  font-size: 26rpx;
  color: #666666;
}
.goodsDetail .detail_wrapper{
  width: 750rpx;
  font-size: 0;
}
.goodsDetail .detail_wrapper .title{
  display: flex;
  height: 90rpx;
  line-height: 90rpx;
}
.goodsDetail .detail_wrapper .title text{
  flex: 1;
  color: #333333;
  font-size: 30rpx;
  text-align: center;
}
.goodsDetail .detail_wrapper .d-view, .goodsDetail .detail_wrapper .d-view .d-image{
  width: 100%;
}

.goodsDetail .comment_wrapper .title{
  padding:20rpx 0;
  color: #ff4b3d;
  font-size: 30rpx;
  font-family: PingFang-SC-Medium;
  border-bottom: 1px solid #999999;
}
.goodsDetail .comment_wrapper .title text{
  padding-left:18rpx;
  border-left:4rpx solid #ff4b3d;
}
.comment_wrapper .comment{
  width: 100%;
  height: auto;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  border-bottom: 1px solid #999999;
}
.comment_wrapper .comment .c-image{
  width:156rpx;
  height:156rpx;
  margin-left: 32rpx;
}
.comment_wrapper .comment .content{
  flex: 1;
}
.show-text{
  color: #333333;
  font-size: 24rpx;

  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.sheepshow{
  vertical-align: middle;
  width: 56rpx;
  text-align: center;
  height: 24rpx;
  line-height: 24rpx;
  font-size: 14rpx;
  color: #ff4b3d;
  border:1px solid #ff4b3d;
}
.user-wrapper{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top:20rpx;
}
.user-content{
  display: flex;
  align-items: center;
}
.u-image{
  width:52rpx;
  height:52rpx;
  margin-right: 12rpx;
  border-radius: 50%;
}
.user-content .name{
  font-size: 18rpx;
  color: #999999;
}
.star-wrapper{
  display: flex;
}
.star-wrapper image{
  width: 32rpx;
  height: 32rpx;
}


.but-btn-wrapper{
  position: fixed;
  bottom:0;
  width: 100%;
}

/*产品轮播蒙版*/
.pro-slider-wrapper-container{
  position: absolute;
  top:0;
  right: 0;
  bottom: 0;
  left:0;
  z-index: 777;
  background-color: #000000;
  display: flex;
  align-items: center;
  justify-content: center;
}

/*蒙版*/
.share-mask{
  position: fixed;
  top:0;
  right: 0;
  bottom: 0;
  left:0;
  z-index: 666;
  background-color: rgba(0, 0, 0, 0.5);

  display: flex;
  justify-content: center;
  align-items: center;
}
.share-wrapper{
  width: 90%;
  position: relative;
  background-color: #ffffff;
}
.share-wrapper .btn{
  position: absolute;
  top:-56rpx;
  right: 0;
  font-size: 16px;
  padding:0 10rpx;
  color: #ffffff;
  border-radius: 50%;
  border:1rpx solid #ffffff;
}
.share-content{
  background-color: #ffffff;
  border-radius: 20rpx;
  color: #333333;
}
.content-area{
  box-sizing:content-box;
  padding: 20rpx;
  border-bottom: 1rpx solid #999999;
}
.share-content .title{
  text-align: center;
  font-size: 16px;
}
.content{
  font-size: 12px;
}

.steps{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.step-icon{
  width: 72rpx;
  height: 72rpx;
}
.jiantou-icon{
  width: 76rpx;
  height: 13rpx;
}
.list{
  line-height: 1.8;
  margin-bottom: 12rpx;
}
.role{
  color: #e81f0b;
}
.last-list{
  color: #333333;
  margin:14rpx;
  font-size: 14px;
}
.btn-area{
  display: flex;
  color: #e81f0b;
  line-height: 2.4;
}
.btn-area .btns{
  flex:1;
  font-size: 16px;
  text-align: center;
  border-right: 1rpx solid #999999;
}
.share-code-wrapper{
  width: 100%;
  position: absolute;
  bottom: 0;
  left:0;
  background-color: #ffffff;
}
.hide-btn{
  position: absolute;
  top:20rpx;
  right: 20rpx;
  padding: 10px;
}
.hide-btn image{
  width: 40rpx;
  height: 40rpx;
}
.pro-desc-wrapper{
  padding:0 60rpx;
}
.pro-desc{
  display: flex;
}
.pro-desc .image{
  width: 380rpx;
  height: 220rpx;
  margin-right: 20rpx;
}
.desc-wrapper{
  font-family: PingFang-SC-Medium;
  font-size: 14px;
}
.desc-wrapper .keyss{
  color: #666666;
}
.desc-wrapper .valuess{
  color: #e81f0b;
}
.code-tips image{
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}
.code-tips{
  height: 120rpx;display: flex;align-items: center;font-size: 12px;color: #e81f0b;font-family: PingFang-SC-Medium;
}
.code-wrapper{
  display: flex;
  align-items: center;
  flex-direction: column;
  padding:20rpx;
  font-size: 14px;
  color: #333333;
}
.qr-code{
  width: 300rpx;
  height: 300rpx;
}