.container{
    min-height: 100vh;
    position: relative;
    color: #ffffff;
    font-family: PingFang-SC-Regular;
}
.bg{
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: -1;
}

.content{
    padding: 30rpx;
}
.role{
    font-size: 16px;
    line-height: 3;
}

.role-des-t{
    font-size: 14px;
    line-height: 2;
}
.role-des{
    font-size: 16px;
    line-height: 2.2;
    font-family: PingFang-SC-Medium;
}
.l-title{
    font-size: 16px;
    line-height: 2.2;
    font-family: PingFang-SC-Medium;
}
.desc{
    font-size: 14px;
    line-height: 2.2;
}
.contact-btn{
    position: absolute;
    bottom: 140rpx;
    left:50%;
    transform: translateX(-50%);
    line-height: 2.22;
    border-radius: 6px;
    color: #333333;
    font-size: 12px;
    padding: 0 10px;
    background-color: #ffffff;
}
