page{
    font-family: PingFang-SC-Regular;
    font-size: 14px;
    min-height: 100vh;
    position: relative;
}
.nav{
    display: flex;
    font-size: 16px;
    line-height: 2.2;
}
.nav view{
    flex: 1;
    text-align: center;
}
.nav view.active{
    background-color: #eeeeee;
}

.step-wrapper{
    padding-top: 50rpx;
}
.steps{
    display: flex;
    
}
.steps-item{
    flex: 1;
    display: flex;
    align-items: center;
}
.steps-item text{
    flex: 1;
    height: 6rpx;
    background-color: #f93625;
}
.steps-item image{
    width: 88rpx;
    height: 88rpx;
    border-radius: 50%;
}
.steps-desc{
    display: flex;
}
.steps-desc view{
    flex: 1;
    text-align: center;
    line-height: 2.4;
    color: #e81f0b;
}


.form-wrapepr{
    padding: 0 30rpx;
}
.form-title{
    font-family: PingFang-SC-Bold;
    padding-left: 10px;
    margin-top: 50rpx;
    margin-bottom: 50rpx;
}
.form-title view{
    border-left: 2px solid red;
    padding-left: 10px;
}
.form-group{
    padding: 10px 0 10px 6px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1rpx solid #eeeeee;
    font-family: PingFang-SC-Medium;
}
.form-group input{
    text-align: right;
}
.form-group .tf{
    text-align: left;
}
.c-btn{
    padding: 6px 15px;
    color: #ffffff;
    background-color: #e81f0b;
}
.r-btn{
    margin: 60rpx auto;
    color: #ffffff;
    background-color: #e81f0b;
    font-size: 16px;
    font-family: PingFang-SC-Medium;
}
.star{
    color: #e81f0b;
    font-size: 16px;
    font-family: PingFang-SC-Heavy;
    vertical-align: middle;
}
.p-image{
    width: 30rpx;
    height: 30rpx;
}
.pic-image{
    width: 70rpx;
    height: 58rpx;
    margin-left: 10rpx;
}


.mask{
  position: fixed;
  top:0;
  right: 0;
  bottom: 0;
  left:0;
  z-index: 777;
  background-color: #000000;
  display: flex;
  align-items: center;
  justify-content: center;
}
.mask image{
  width: 100%;
}