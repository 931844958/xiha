.container{
    min-height: 100vh;
    position: relative;
    
}
.bg{
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: -22;
}
.store-wrapepr{
    display: flex;
    box-sizing: border-box;
    padding: 30rpx;
    background-color: #ffffff;
    font-family: PingFang-SC-Medium;
}
.store-img{
    width: 220rpx;
    height: 220rpx;
    margin-right: 30rpx;
}
.desc-wrapper{
    flex:1;
}
.desc-wrapper > view{
    margin-bottom: 14rpx;
}
.keyss{
    color: #666666;
    font-size: 14px;
    margin-right: 8px;
}
.valuess{
    color: #333333;
    font-size: 16px;
}
.code-wrapper{
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    bottom:260rpx;
    z-index: 1;
    text-align: center;
}
.code-img{
    width: 300rpx;
    height: 300rpx;
}
.code-desc{
    font-family: PingFang-SC-Bold;
    color: #ffffff;
    font-size: 14px;
}