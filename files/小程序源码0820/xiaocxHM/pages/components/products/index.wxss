.products_wrapper{
  font-size: 14px;
  padding: 30rpx 0;
}
.p-item{
  overflow: hidden;
  margin: 0 auto;
  margin-bottom: 30rpx;
  width: 690rpx !important;
  height: 570rpx !important;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  box-shadow: 0 0 8px grey;
}
.name-sale .sale{
  color: #999999;
}
.name-sale{
  display: flex;
  justify-content: space-between;
  padding:0 10px;
  line-height: 1.8;
  font-size: 12px;
}
.slide-image{
  height: 450rpx;
  width: 100%;
}
.price{
  color: #e8454e;
  font-size: 16px;
  margin-right: 18rpx;
}
.effect{
  font-family: PingFang-SC-Medium;
  color: #333333;
  font-size: 16px;
  padding: 0 8rpx;
  line-height: 1.6;
  margin-right: 16rpx;
}
.baozhang{
  color: #333333;
  font-size: 10px;
  background-color: #e2e2e2;
  padding:0 10rpx;
  height: 44rpx;
  line-height: 44rpx;
}
