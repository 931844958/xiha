.search-wrapper{
    padding: 30rpx 24rpx 0 24rpx;
}
.search-box{
    height: 82rpx;
    border:1rpx solid #dddddd;
    border-radius: 41rpx;
    display: flex;
    align-items: center;
    padding:0 32rpx;
}
.search-box .search{
    width: 570rpx;
}
.s-icon-wrapper{
    flex: 1;
    padding: 10rpx;
}
.search-box .s-icon{
    width: 44rpx;
    height: 44rpx;
}
.h-class{
    font-size: 28rpx;
    color: #c5ddfe;
}

/*功能分类入口*/
.tab-wrapper{
    display: flex;
    justify-content: space-around;
    text-align: center;
    padding-top:50rpx;
}
.tab-item .icon{
    width: 70rpx;
    height: 70rpx;
}
.tab-item .text{
    display: block;
    font-family: PingFang-SC-Regular;
    font-size: 24rpx;
    line-height: 1.6;
    color: #666666;
}

.card-wrapper{
    padding: 40rpx;
}
.card-box{
    display: flex;
    background-color: #8EBDFD;
    border-radius: 10rpx;
    padding: 24rpx 0;
    box-shadow: #8EBDFD 0 0 10rpx;
}
.card{
    display: flex;
    color: #ffffff;
    padding:0 40rpx;
}
.card:first-of-type{
    border-right: 1rpx solid #ffffff;
}
.card .image{
    width: 51rpx;
    height: 62rpx;
}
.card .content{
    flex: 1;
    padding-left:16rpx;
}
.card .content .name{
    font-size: 28rpx;
}
.card .content .desc{
    font-size: 24rpx;
}

.lesson-wrapper{
     padding: 0 20rpx;
}
.lesson-wrapper .title{
    display: flex;
    justify-content: space-between;
    line-height: 3;
}
.lesson-wrapper .title .name{
    font-family: PingFang-SC-Medium;
    font-size: 30rpx;
    color: #333333;
}
.lesson-wrapper .title .more{
    font-family: PingFang-SC-Regular;
    font-size: 26rpx;
    color: #999999;
    display: flex;
    align-items: center;
}
.lesson-wrapper .title .jiantou{
    transform:rotate(-45deg);
    width: 18rpx;
    height: 18rpx;
    border-right: 1px solid #888888;
    border-bottom: 1px solid #888888;
}
.lesson-item{
    display: flex;
    border-top:1rpx solid #dddddd;
    padding: 32rpx 0;
}
.lesson-item .wrap-image{
    position: relative;
    width: 170rpx;
    height: 170rpx;
}
.wrap-image .image{
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
}
.wrap-image .btn{
    position: absolute;
    top:50%;
    left:50%;
    transform: translate(-50%,-50%);
    width: 70rpx;
    height: 70rpx;
}
.lesson-item .content{
    width: 510rpx;
    padding-right: 30rpx;
    font-family: PingFang-SC-Regular;
    font-size: 26rpx;
    color: #888888;
}
.lesson-item .content .title{
    font-family: PingFang-SC-Medium;
    font-size: 30rpx;
    color: #333333;
    line-height: 2;
    max-width: 100%;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.lesson-item .content .desc{
    display: flex;
    justify-content: space-between;
    line-height: 2;
}
.lesson-item .content .name{
    line-height: 2.22;
}
.author{
    display: flex;
    align-items: center;
}
.author .name{
    font-size: 12px;
    color: #999999;
}
.author .image{
    width: 44rpx;
    height: 44rpx;
    border-radius: 50%;
    margin-left: 12rpx;
}

.zhishi{
    padding: 20rpx;
}
.zhishi .nav-wrapper{
    display: flex;
    justify-content: space-around;
}
.nav-wrapper .tab{
    flex: 1;
    text-align: center;
    line-height: 2.5;
}
.nav-wrapper .tab.active{
    border-bottom: 2rpx solid #8EBDFD;
    color: #8EBDFD;
}