page{
    height: 100%;
}
.lesson-wrapper{
     padding: 0 30rpx;
}
.lesson-item{
    display: flex;
    border-top:1rpx solid #dddddd;
    padding: 32rpx 0;
}
.lesson-item .wrap-image{
    position: relative;
    width: 170rpx;
    height: 170rpx;
}
.wrap-image .image{
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
}
.wrap-image .btn{
    position: absolute;
    top:50%;
    left:50%;
    transform: translate(-50%,-50%);
    width: 70rpx;
    height: 70rpx;
}
.lesson-item .content{
    flex: 1;
    padding-right: 28rpx;
    font-family: PingFang-SC-Regular;
    font-size: 26rpx;
    color: #888888; 
}
.lesson-item .content .title{
    font-family: PingFang-SC-Medium;
    font-size: 30rpx;
    color: #333333;
    line-height: 2.44;
}
.lesson-item .content .name{
    line-height: 2.22;
}
.lesson-item .content .desc{
    display: flex;
    justify-content: space-between;
}