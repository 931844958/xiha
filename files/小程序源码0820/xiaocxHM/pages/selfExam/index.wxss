.container{
    min-height: 100vh;
    position: relative;
}
.bg{
    position: absolute;
    z-index: -99;
    width: 100%;
    height: 100%;
}
.head-wrapper{
    display: flex;
    justify-content: center;
    padding: 50rpx;
}
.head-img{
    width: 433rpx;
    height: 256rpx;
}
.item-wrapper{
    display: flex;
    justify-content: space-around;
    flex-wrap: wrap;
    padding: 80rpx;
}
.item{
    width: 40%;
    text-align: center;
}
.logo{
    width: 180rpx;
    height: 180rpx;
    border-radius: 50%;
}
.desc{
    display: block;
    font-size: 16px;
    color: #ffffff;
    text-align: center;
    line-height: 2.4;
}