page{
    height: 100%;
}
.person-wrapper{
    background: #8ebdfd;
    width: 682rpx;
    height: 254rpx;
    margin:40rpx auto;
    color: #ffffff;
    font-family: PingFang-SC-Regular;
}
.who-where{
    display: flex;
}
.who-where .image{
    width: 130rpx;
    height: 130rpx;
    border-radius: 50%;
    margin:20rpx;
}
.who-where .name{
    font-size: 32rpx;
    line-height: 2.2;
    font-family: PingFang-SC-Medium;
}
.juewei,.hosp{
    font-size: 28rpx;
    line-height: 2;
}
.content{
    flex: 1;
}
.count{
    display: flex;
    justify-content: space-between;
    padding: 10rpx;
    font-size: 26rpx;
}
.ways{
    position: relative;
    display: flex;
    padding: 34rpx;
    padding-top:0;
    font-family: PingFang-SC-Regular;
}
.ways .icon{
    width: 66rpx;
    height: 66rpx;
    margin-right: 20rpx;
}
.ways .desc{
    flex:1;
}
.ways .keyss{
    font-size: 30rpx;
    color: #333333;
}
.ways .valuess{
    font-size: 26rpx;
    color: #999999;
}
.ways .btn{
    background-color: #8ebdfd;
    width: 150rpx;
    color: #ffffff;
    line-height: 50rpx;
    height: 50rpx;
    font-size: 26rpx;
    padding: 0;
    border-radius: 50rpx;
}

.desc-wrapper{
    margin: 34rpx auto;
    width: 682rpx;
    background-color: #E8F2FF;
    font-family: PingFang-SC-Regular;
}
.desc-wrapper .icon{
    width: 44rpx;
    height: 44rpx;
    vertical-align: middle;
}
.desc-wrapper .title{
    font-size: 30rpx;
    color: #333333;
    line-height: 2.6;
    padding: 10rpx;
    border-bottom: 1rpx solid #ffffff;
}
.desc-wrapper .content{
    font-size: 28rpx;
    color: #666666;
    padding: 20rpx 50rpx;
}