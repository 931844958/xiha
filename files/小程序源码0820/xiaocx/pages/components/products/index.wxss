.products_wrapper{
  font-size: 14px;
  font-family: PingFang-SC-Regular;
}
.p-item{
  overflow: hidden;
  margin: 0 auto;
  width: 690rpx !important;
  /* height: 700rpx !important; */
  border:1rpx solid #eeeeee;
  background-color: #ffffff;  
}
.name-sale .sale{
  color: #999999;
}
.name-sale .name{
  color: #333333;
}
.name-sale{
  display: flex;
  justify-content: space-between;
  padding:0 10px;
  line-height: 1.8;
  font-size: 12px;
}
.des-wrapper{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding:0 10px;
  padding-bottom:10px;
  line-height: 2;
  position: relative;
}
.slide-image-wrapper{
  position: relative;
  height: 450rpx;
  width: 100%;
}
.slide-image{
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 11;
}
.effect{
  position: absolute;
  bottom: 0;
  width: 100%;
  z-index: 22;
  line-height: 2.4;
  color: #ffffff;
  background-color: rgba(0, 0, 0, 0.5);
  font-size: 14px;
  padding-left: 14rpx;
}
.price{
  color: #e81f0b;
  font-size: 16px;
}

.share-btn{
  background-color: #e81f0b;
  color: #ffffff;
  font-size: 14px;
  height: 66rpx;
  line-height: 2.4;
  padding:0 20rpx;
  border-radius: 40rpx;
}


.share-mask{
  position: fixed;
  top:0;
  right: 0;
  bottom: 0;
  left:0;
  z-index: 666;
  background-color: rgba(0, 0, 0, 0.5);

  display: flex;
  justify-content: center;
  align-items: center;
}
.share-wrapper{
  width: 90%;
  position: relative;
  background-color: #ffffff;
}
.share-wrapper .btn{
  position: absolute;
  top:-56rpx;
  right: 0;
  font-size: 16px;
  padding:0 10rpx;
  color: #ffffff;
  border-radius: 50%;
  border:1rpx solid #ffffff;
}
.share-content{
  background-color: #ffffff;
  border-radius: 20rpx;
  color: #333333;
}
.content-area{
  box-sizing:content-box;
  padding: 20rpx;
  border-bottom: 1rpx solid #999999;
}
.share-content .title{
  text-align: center;
  font-size: 16px;
}
.content{
  font-size: 12px;
}

.steps{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.step-icon{
  width: 72rpx;
  height: 72rpx;
}
.jiantou-icon{
  width: 76rpx;
  height: 13rpx;
}
.list{
  line-height: 1.8;
  margin-bottom: 12rpx;
}
.role{
  color: #e81f0b;
}
.last-list{
  color: #333333;
  margin:14rpx;
  font-size: 14px;
}
.btn-area{
  display: flex;
  line-height: 2.4;
}
.btn-area .btns{
  flex:1;
  font-size: 16px;
  text-align: center;
  color: #e81f0b;
  background-color: #ffffff;
  border-right: 1rpx solid #999999;
}
.share-code-wrapper{
  width: 100%;
  position: absolute;
  bottom: 0;
  left:0;
  background-color: #ffffff;
}
.hide-btn{
  position: absolute;
  top:20rpx;
  right: 20rpx;
  padding: 10px;
}
.hide-btn image{
  width: 40rpx;
  height: 40rpx;
}
.pro-desc-wrapper{
  padding:0 60rpx;
}
.pro-desc{
  display: flex;
}
.pro-desc .image{
  width: 380rpx;
  height: 220rpx;
  margin-right: 20rpx;
}
.desc-wrapper{
  font-family: PingFang-SC-Medium;
  font-size: 14px;
}
.desc-wrapper .keyss{
  color: #666666;
}
.desc-wrapper .valuess{
  color: #e81f0b;
}
.code-tips image{
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}
.code-tips{
  height: 120rpx;display: flex;align-items: center;font-size: 12px;color: #e81f0b;font-family: PingFang-SC-Medium;
}
.code-wrapper{
  display: flex;
  align-items: center;
  flex-direction: column;
  padding:20rpx;
  font-size: 14px;
  color: #333333;
}
.qr-code{
  width: 300rpx;
  height: 300rpx;
}